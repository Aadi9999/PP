<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffff"
    tools:context="com.Aadi.PP.Chat.ChatActivity">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sendLayout"
        android:layout_below="@+id/toolBar"
        android:layout_marginBottom="12dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="no_data_available" />

    <LinearLayout
        android:id="@+id/sendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:background="@drawable/chatback"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
        android:id="@+id/message"
        android:hint="Write a message..."
        android:fontFamily="@font/lato"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textCapSentences|textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:maxLines="6"/>

    <Button
        android:id="@+id/send"
        android:textSize="14dp"
        android:fontFamily="@font/lato"
        android:text="SEND"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_gravity="bottom" />


    </LinearLayout>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color1"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolBar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="20"
            android:orientation="horizontal">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/profilepic"
                android:id="@+id/MatchImage"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/sporticon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter" />

            <LinearLayout android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:layout_weight="40"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato"
                    android:textColor="#fff"
                    android:text="Live Chat"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:id="@id/MatchName"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="40"
                    android:fontFamily="@font/lato"
                    android:textColor="#e4e4e4"
                    android:text="Last seen"
                    android:textSize="10sp"
                    android:id="@+id/user_last_seen"/>





            </LinearLayout>

        </LinearLayout>


        </android.support.v7.widget.Toolbar>

</RelativeLayout>

